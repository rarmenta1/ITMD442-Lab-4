extends layout

block content
  h1= title
  p Are you sure you want to delete this contact?
  hr
  #contacts-wrapper 
    <table style="width:100%">
      <tr>
        th First Name
        th Last Name
        th Email Address
        th Notes
        th Date Created/Modified
      </tr>
        tr.contacts-list 
          th= contact.firstName 
          th= contact.lastName
          th= contact.email
          th= contact.notes
          th= contact.date
    </table>
    hr
  form(method='POST', action='/contacts/' + contact.id + '/delete')
    button(type='submit') Confirm Delete
    | 
    a(href='/contacts/' + contact.id) Cancel 
